<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.houzhi.slidefinish"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="22" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".demo.MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".demo.TestSlideActivity"
            android:label="@string/title_activity_main"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".demo.TestViewPagerActivity"
            android:label="@string/title_activity_test_view_pager"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".demo.TestSlideFragmentActivity"
            android:label="@string/title_activity_test_slide_fragment"></activity>
    </application>

</manifest>
